<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlackblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_header"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/all_back"
                android:layout_weight="0"
                android:background="@drawable/ic_action_bbtn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/titel_name"
                android:textSize="23dp"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="23dp"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                android:text="档案"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/title_layout"
            android:background="@color/colorBlack"
            android:layout_below="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/all_magicindicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" />
        </RelativeLayout>

        <com.lantian.lib_commin_ui.viewpager.MyViewPager
            android:id="@+id/all_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_layout"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />
    </RelativeLayout>

</LinearLayout>