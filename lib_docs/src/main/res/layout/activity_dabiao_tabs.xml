<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlackblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_header"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dabiao_btn_back"
            android:layout_weight="0"
            android:background="@drawable/ic_action_bbtn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorwhite"
            android:id="@+id/dabiao_breed_name"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doc"
            android:textColor="@color/colorwhite"
            android:textSize="23dp"
            android:textStyle="bold" />

        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>

    <RelativeLayout
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:id="@+id/lien2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购置时间:"
                android:textColor="@color/afterSelector" />
            <TextView
                android:id="@+id/dabiao_breed_by_time"
                android:layout_marginLeft="5dp"
                android:textColor="@color/afterSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lien3"
            android:gravity="center_vertical"
            android:layout_below="@id/lien2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dabiao_breed_head"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cio_head"/>
            <TextView
                android:id="@+id/dabiao_breed_titel"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="猪猪"
                android:textColor="@color/afterSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lien4"
            android:layout_below="@id/lien3"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textColor="@color/afterSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dabiao_breed_number"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/afterSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"/>
            <TextView
                android:id="@+id/ge"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="个"
                android:textColor="@color/afterSelector"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/afterSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="支出："
                android:gravity="end|center_horizontal"
                android:textColor="@color/afterSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dabiao_breed_out"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500.00"
                android:textColor="@color/afterSelector"/>
            <TextView
                android:layout_below="@+id/breed_name"
                android:layout_weight="1"
                android:textColor="@color/afterSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/afterSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:background="@drawable/bg03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dabiao_breeds_doc_msg"
            android:gravity="center"
            android:text="档案信息"
            android:textStyle="bold"
            android:textColor="@color/afterSelector"
            android:background="@drawable/bg07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>