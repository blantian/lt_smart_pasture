<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlackblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/liner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_action_msg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:hint="基础信息"
                    android:textColorHint="@color/afterSelector"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cio_head"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start" />
                <TextView
                    android:id="@+id/breedbase_name"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:text="数量" />
                <TextView
                    android:id="@+id/basebreed_num"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColor="@color/afterSelector"
                    android:text="个" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:text="公畜数量" />
                <TextView
                    android:id="@+id/basemale_num"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColor="@color/afterSelector"
                    android:text="个" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:text="母畜数量" />
                <TextView
                    android:id="@+id/basefamele_num"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColor="@color/afterSelector"
                    android:text="个" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:text="年龄" />
                <TextView
                    android:id="@+id/basebreed_age"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColor="@color/afterSelector"
                    android:text="天" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:text="购置时间" />
                <TextView
                    android:id="@+id/basebreed_time"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="180dp"
                    android:layout_height="50dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:text="购置地址" />
                <TextView
                    android:id="@+id/basebreed_adress"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="280dp"
                    android:layout_height="80dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:text="牲畜品种" />
                <TextView
                    android:id="@+id/basebreed_class"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="110dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:text="供应商" />
                <TextView
                    android:id="@+id/gongyingshang"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="110dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:text="总支出" />
                <TextView
                    android:id="@+id/zongzhichu"
                    android:gravity="center|end"
                    android:textColor="@color/colorwhite"
                    android:textSize="18dp"
                    android:layout_width="110dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg"/>

</LinearLayout>