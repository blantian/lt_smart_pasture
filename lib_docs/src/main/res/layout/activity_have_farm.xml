<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlackblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/have_farm_bttn"
            android:layout_weight="0"
            android:background="@drawable/ic_action_bbtn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="23dp"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            android:text="@string/farm_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/synfarmdata"
            android:background="@drawable/ic_action_resyndata"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/farmer_msg"
        android:background="@color/colorBlack"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_name"
                android:textColor="@color/colorwhite"
                android:textSize="20dp"
                android:text="@string/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorwhite"
                android:text="@string/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <Space
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/header_icon"
            android:src="@drawable/cio_head"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
     </LinearLayout>
            <ImageView
                android:background="@drawable/bg03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/bg04"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg04" />

            <LinearLayout
                android:id="@+id/liner1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/bg04"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/colorBlack"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                <LinearLayout
                    android:id="@+id/btn_member"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg02"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_action_renkou" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp"
                        android:textColor="@color/afterSelector"
                        android:text="人口"
                        android:textColorHint="@color/colorwhite" />

                    <TextView
                        android:id="@+id/m_population"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp"
                        android:textColor="@color/afterSelector"
                        android:textColorHint="@color/colorwhite" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_total"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg02"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_action_shouhui" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="收支总汇"
                        android:textColor="@color/afterSelector"
                        android:textSize="12dp"
                        android:textColorHint="@color/colorwhite" />

                    <TextView
                        android:id="@+id/in_out_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/afterSelector"
                        android:textSize="12dp"
                        android:textColorHint="@color/colorwhite" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_area"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg02"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_action_mianji" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp"
                        android:text="草原面积"
                        android:textColor="@color/afterSelector"
                        android:textColorHint="@color/colorwhite" />

                    <TextView
                        android:id="@+id/green_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/afterSelector"
                        android:textColorHint="@color/colorwhite"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_compensate"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg02"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_action_butie" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/afterSelector"
                        android:text="补贴"
                        android:textSize="12dp"
                        android:textColorHint="@color/colorwhite" />

                    <TextView
                        android:id="@+id/m_subsidy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/afterSelector"
                        android:textSize="12dp"
                        android:textColorHint="@color/colorwhite" />

                </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/bg05"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/liner1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg05" />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:id="@+id/layout_header"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@drawable/ic_action_msg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/colorwhite"
                    android:text="@string/inout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:background="@color/colorBlack"
                    android:layout_below="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <net.lucode.hackware.magicindicator.MagicIndicator
                        android:id="@+id/magic_indicator_farm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>
                <com.lantian.lib_commin_ui.viewpager.MyViewPager
                    android:id="@+id/vp_in_out"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/title_layout"
                    android:layout_marginBottom="0dp"/>
            <LinearLayout
                android:id="@+id/layout_header2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@drawable/ic_action_msg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/colorwhite"
                    android:text="@string/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/title_layout2"
                android:background="@color/colorBlack"
                android:layout_below="@+id/layout_header2"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/magic_indicator2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />
            </RelativeLayout>
            <com.lantian.lib_commin_ui.viewpager.MyViewPager
                android:id="@+id/vp_area"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/title_layout"
                android:layout_marginBottom="0dp"/>
            <LinearLayout
                android:id="@+id/layout_header3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@drawable/ic_action_msg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/colorwhite"
                    android:text="@string/farm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/title_layout3"
                android:background="@color/colorBlack"
                android:layout_below="@+id/layout_header2"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/magic_indicator3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />
            </RelativeLayout>
            <com.lantian.lib_commin_ui.viewpager.MyViewPager
                android:id="@+id/vp_subsidy"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/title_layout"
                android:layout_marginBottom="0dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>