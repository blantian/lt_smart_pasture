<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/left_drawer_layout"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/top_tab"
        android:layout_gravity="start">
        <LinearLayout
            android:layout_marginTop="45dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:id="@+id/add_camera"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/cio_head"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textSize="18dp"
                    android:textColor="@color/colorwhite"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/epc"
            android:background="@color/colorBlack"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_epc"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/UHF"
                android:textSize="14dp"
                android:textColor="@color/colorwhite"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        <LinearLayout
            android:id="@+id/bttn_pw"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/ic_action_pawoer"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="10dp"
                android:text="功率设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/bttn_long_pw"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/ic_action_pawoer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="10dp"
                    android:text="超高频率"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/dvis"
            android:background="@color/colorBlack"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_dvis"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/LANCamera"
                android:textSize="14dp"
                android:textColor="@color/colorwhite"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/left_drawer"
                android:layout_weight="4"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="#33333333"
                android:dividerHeight="0dp"
                android:background="#ffeeeeee"
                android:listSelector="#B0B0B0">
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>